{
  "name": "student-support-copilot",
  "version": "1.0.0",
  "description": "API GPT hỗ trợ sinh viên trường học chạy trên Serverless Framework offline.",
  "type": "module",
  "main": "src/app.js",
  "scripts": {
    "dev": "serverless offline start",
    "ddb:install": "sls dynamodb install",
    "ddb:start": "sls dynamodb start",
    "seed": "node ./seed/seed-runner.js",
    "test": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --runInBand",
    "lint": "eslint .",
    "format": "prettier -w .",
    "setup": "bash ./setup.sh"
  },
  "engines": {
    "node": ">=20.19.0"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.540.0",
    "@aws-sdk/lib-dynamodb": "^3.540.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "openai": "^4.52.2",
    "serverless-http": "^3.2.0",
    "uuid": "^9.0.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "serverless": "^3.39.0",
    "serverless-dynamodb-local": "^0.2.40",
    "serverless-offline": "^13.3.2",
    "supertest": "^6.3.4"
  }
}
